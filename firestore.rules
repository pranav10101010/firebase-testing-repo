rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Public read, but authenticated writes only
    match /menuItems/{item} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Restrict admin data
    match /admin/{docId} {
      allow read, write: if request.auth.token.role == "admin";
    }
  }
}

